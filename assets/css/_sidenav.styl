.containerheader.shrink 
	#sidenav-toggle
		color $black-75 !important
		svg
			path
				fill $black-75 !important

.sidenav
	background-color $primary-color

	.sidenav-menu
		li
			a
				color $white-75

	.credentials_nav
		color $white-75
		.social-sidebar-topright
			a
				background-color $white !important
				color $primary-color
			&:hover
				color transparent
		p
			a:hover
				color $white
				padding 0px !important
				background transparent !important

	.resrv
		color $white-54 !important

.sidenav-overlay
	background-color $black-54

.navigation-button
	a
		display inline-block
		font-size 24px
		color #fff

		svg
			vertical-align: middle;
			margin-right: 15px;

	a:hover, a:focus
		text-decoration none !important